<section id="demo" class="my-3">
  <div class="row mb-3">
    <div class="col-12 col-lg-9">
      <h2 class="mb-0">
        <%= __('demo') %>
          <small class="d-block h6 text-muted mt-2 mb-0">
            <%= __('demo.subtitle') %>
          </small>
      </h2>
    </div>
    <div class="col-12 col-lg-3">
      <div class="d-flex">
        <div class="btn-group ml-auto" role="menubar">
          <a class="btn btn-lg btn-link btn-share-link" href="<%= share.facebookShareUrl %>"
            title="<%= __('action.share.onFacebook') %>" target="_blank" role="menuitem"><i
              class="fa fa-facebook color-facebook" aria-hidden="true"></i></a>
          <a class="btn btn-lg btn-link btn-share-link" href="<%= share.twitterShareUrl %>"
            title="<%= __('action.share.onTwitter') %>" target="_blank" role="menuitem"><i
              class="fa fa-twitter color-twitter" aria-hidden="true"></i></a>
          <a class="btn btn-lg btn-link btn-share-link" href="<%= share.linkedInShareUrl %>"
            title="<%= __('action.share.onLinkedIn') %>" target="_blank" role="menuitem"><i
              class="fa fa-linkedin color-linkedin" aria-hidden="true"></i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5 mb-2 mb-lg-0">
      <form id="inflection-form">
        <div class="card">
          <div class="card-body">
            <div class="alert alert-info" role="alert">
              <%= __('inflectionForm.caption') %>
            </div>
            <div class="form-group">
              <label class="radio-inline mr-2">
                <input type="radio" name="gender" value="male" checked="checked">
                <%= __('gender.male') %>
              </label>
              <label class="radio-inline">
                <input type="radio" name="gender" value="female">
                <%= __('gender.female') %>
              </label>
            </div>
            <div class="form-group">
              <label for="lastName">
                <%= __('anthroponym.lastName') %>
              </label>
              <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Шевченко">
            </div>
            <div class="form-group">
              <label for="firstName">
                <%= __('anthroponym.firstName') %>
              </label>
              <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Тарас">
            </div>
            <div class="form-group">
              <label for="middleName">
                <%= __('anthroponym.middleName') %>
              </label>
              <input type="text" class="form-control" name="middleName" id="middleName" placeholder="Григорович">
            </div>
          </div>
          <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-inflection-form">
              <%= __('action.inflect') %>
            </button>
            <button class="btn btn-link pull-right btn-inflection-form" type="button" data-toggle="modal"
              data-target="#contactMe">
              <%= __('foundBug') %>
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-lg-7">
      <div class="card mb-2">
        <table class="table table-striped table-responsive-md m-0">
          <tr>
            <th class="border-top-0">
              <%= __('grammaticalCase') %>
            </th>
            <th class="border-top-0">
              <%= __('anthroponym.lastName') %>
            </th>
            <th class="border-top-0">
              <%= __('anthroponym.firstName') %>
            </th>
            <th class="border-top-0">
              <%= __('anthroponym.middleName') %>
            </th>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.nominative') %>
            </th>
            <td id="nominativeLastName">Шевченко</td>
            <td id="nominativeFirstName">Тарас</td>
            <td id="nominativeMiddleName">Григорович</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.genitive') %>
            </th>
            <td id="genitiveLastName">Шевченка</td>
            <td id="genitiveFirstName">Тараса</td>
            <td id="genitiveMiddleName">Григоровича</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.dative') %>
            </th>
            <td id="dativeLastName">Шевченку</td>
            <td id="dativeFirstName">Тарасу</td>
            <td id="dativeMiddleName">Григоровичу</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.accusative') %>
            </th>
            <td id="accusativeLastName">Шевченка</td>
            <td id="accusativeFirstName">Тараса</td>
            <td id="accusativeMiddleName">Григоровича</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.ablative') %>
            </th>
            <td id="ablativeLastName">Шевченком</td>
            <td id="ablativeFirstName">Тарасом</td>
            <td id="ablativeMiddleName">Григоровичем</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.locative') %>
            </th>
            <td id="locativeLastName">Шевченкові</td>
            <td id="locativeFirstName">Тарасові</td>
            <td id="locativeMiddleName">Григоровичу</td>
          </tr>
          <tr>
            <th>
              <%= __('grammaticalCase.vocative') %>
            </th>
            <td id="vocativeLastName">Шевченку</td>
            <td id="vocativeFirstName">Тарасе</td>
            <td id="vocativeMiddleName">Григоровичу</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</section>