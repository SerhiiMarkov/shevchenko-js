<form method="post" action="<%= process.env.APP_URL %>/contact-me">
    <div class="form-group required">
        <label for="name">Ваше ім'я</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group required">
        <label for="email">Ваша e-mail адреса</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group required">
        <label for="message">Текст повідомлення</label>
        <textarea class="form-control" id="message" name="message" required rows="8"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Надіслати</button>
</form>
