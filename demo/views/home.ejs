<%- include('./layout/header') -%>
<%- include('./layout/navbar') -%>
<%- include('./layout/flashes') -%>
<div id="home" class="jumbotron">
    <h1>shevchenko <span class="visible-md-inline visible-lg-inline"><small id="preview"></small></span>
    </h1>
    <p><%= __('app.description') %></p>
    <p>
        <a class="btn btn-lg btn-primary" href="<%= currentUrl %>#demo" role="button"><%= __('demo') %></a>
        <a class="btn btn-lg btn-default" href="<%= currentUrl %>#usage" role="button"><%= __('usage') %></a>
    </p>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2 id="demo"><%= __('demo') %>
            <span class="btn-group pull-right">
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= shareOnFacebookUrl %>"
                       title="<%= __('share-on-facebook') %>"
                       target="_blank"><i class="fa fa-facebook color-facebook" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= shareOnTwitterUrl %>"
                       title="<%= __('share-on-twitter') %>"
                       target="_blank"><i class="fa fa-twitter color-twitter" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= shareOnGooglePlusUrl %>"
                       title="<%= __('share-on-google-plus') %>"
                       target="_blank"><i class="fa fa-google-plus color-google-plus" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= shareOnLinkedInUrl %>"
                       title="<%= __('share-on-linked-in') %>"
                       target="_blank"><i class="fa fa-linkedin color-linkedin" aria-hidden="true"></i></a>
                </span>
        </h2>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-5">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="alert alert-info" role="alert"><%= __('inflection-form-description') %>
                </div>
                <form id="inflection-form">
                    <div class="form-group">
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="male" checked="checked"> <%= __('male') %>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="female"> <%= __('female') %>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="firstName"><%= __('first-name') %></label>
                        <input type="text"
                               class="form-control"
                               name="firstName"
                               id="firstName"
                               placeholder="Тарас">
                    </div>
                    <div class="form-group">
                        <label for="middleName"><%= __('middle-name') %></label>
                        <input type="text"
                               class="form-control"
                               name="middleName"
                               id="middleName"
                               placeholder="Григорович">
                    </div>
                    <div class="form-group">
                        <label for="lastName"><%= __('last-name') %></label>
                        <input type="text"
                               class="form-control"
                               name="lastName"
                               id="lastName"
                               placeholder="Шевченко">
                    </div>
                    <button type="submit"
                            class="btn btn-primary btn-inflection-form"><%= __('inflect') %></button>
                    <button class="btn btn-link pull-right btn-inflection-form"
                            type="button"
                            data-toggle="modal"
                            data-target="#contactMe"><%= __('found-bug') %></button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-7">
        <div class="panel panel-default table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th><%= __('case') %></th>
                    <th><%= __('first-name') %></th>
                    <th><%= __('middle-name') %></th>
                    <th><%= __('last-name') %></th>
                </tr>
                <tr>
                    <th><%= __('case-nominative') %></th>
                    <td id="nominativeFirstName">Тарас</td>
                    <td id="nominativeMiddleName">Григорович</td>
                    <td id="nominativeLastName">Шевченко</td>
                </tr>
                <tr>
                    <th><%= __('case-genitive') %></th>
                    <td id="genitiveFirstName">Тараса</td>
                    <td id="genitiveMiddleName">Григоровича</td>
                    <td id="genitiveLastName">Шевченка</td>
                </tr>
                <tr>
                    <th><%= __('case-dative') %></th>
                    <td id="dativeFirstName">Тарасу</td>
                    <td id="dativeMiddleName">Григоровичу</td>
                    <td id="dativeLastName">Шевченку</td>
                </tr>
                <tr>
                    <th><%= __('case-accusative') %></th>
                    <td id="accusativeFirstName">Тараса</td>
                    <td id="accusativeMiddleName">Григоровича</td>
                    <td id="accusativeLastName">Шевченка</td>
                </tr>
                <tr>
                    <th><%= __('case-ablative') %></th>
                    <td id="ablativeFirstName">Тарасом</td>
                    <td id="ablativeMiddleName">Григоровичем</td>
                    <td id="ablativeLastName">Шевченком</td>
                </tr>
                <tr>
                    <th><%= __('case-locative') %></th>
                    <td id="locativeFirstName">Тарасові</td>
                    <td id="locativeMiddleName">Григоровичу</td>
                    <td id="locativeLastName">Шевченкові</td>
                </tr>
                <tr>
                    <th><%= __('case-vocative') %></th>
                    <td id="vocativeFirstName">Тарасе</td>
                    <td id="vocativeMiddleName">Григоровичу</td>
                    <td id="vocativeLastName">Шевченку</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2 id="documentation"><%= __('documentation') %> <a
                    href="<%= __('library-documentation-url') %>"
                    target="_blank"
                    class="btn btn-link"><%= __('full-version') %></a></h2>
        <hr>
        <h3 id="usage"><%= __('usage') %></h3>
        <pre style="background:#fff;color:#3b3b3b"><span style="color:#ff5600">var</span> person <span
                    style="color:#069;font-weight:700">=</span> {
    gender: <span style="color:#666">"male"</span>, <span style="color:#af82d4">// or "female"</span>
    firstName: <span style="color:#666">"Тарас"</span>,
    middleName: <span style="color:#666">"Григорович"</span>,
    lastName: <span style="color:#666">"Шевченко"</span>
};

<span style="color:#ff5600">var</span> result <span style="color:#069;font-weight:700">=</span> shevchenko.inVocative(person);

<span style="color:#21439c">console.log</span>(result); <span style="color:#af82d4">// {firstName: 'Тарасе', middleName: 'Григоровичу', lastName: 'Шевченку'}</span>
</pre>
        <a href="<%= __('library-documentation-url') %>"
           target="_blank"
           class="btn btn-primary"><%= __('more-info') %></a>
        <h3><%= __('installation') %></h3>
        <pre style="background:#fff;color:#3b3b3b">npm install <span
                    style="color:#af82d4">--save shevchenko</span></pre>
        <h3><%= __('connection') %></h3>
        <h4>Node.js</h4>
        <pre style="background:#fff;color:#3b3b3b"><span style="color:#ff5600">var</span> shevchenko <span
                    style="color:#069;font-weight:700">=</span> require(<span
                    style="color:#666">"shevchenko"</span>);</pre>
        <h4><%= __('browser') %></h4>
        <pre style="background:#fff;color:#3b3b3b"><span style="color:#069;font-weight:700">&lt;</span>‍script type<span
                    style="color:#069;font-weight:700">=</span><span
                    style="color:#666">"text/javascript"</span> src<span
                    style="color:#069;font-weight:700">=</span><span style="color:#666">"/path/to/shevchenko/dist/bundle/shevchenko.min.js"</span><span
                    style="color:#069;font-weight:700">></span><span style="color:#069;font-weight:700">&lt;</span>‍/script<span
                    style="color:#069;font-weight:700">></span>
</pre>
    </div>
</div>
<%- include('./layout/footer') -%>
