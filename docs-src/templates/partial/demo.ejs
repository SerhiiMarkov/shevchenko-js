<div class="row my-2">
    <div class="col-lg-5 mb-2 mb-lg-0">
        <form id="inflection-form">
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <%= __('inflectionFormDescription') %>
                    </div>
                    <div class="form-group">
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="male" checked="checked"> <%= __('male') %>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="female"> <%= __('female') %>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="lastName"><%= __('lastName') %></label>
                        <input type="text"
                               class="form-control"
                               name="lastName"
                               id="lastName"
                               placeholder="Шевченко">
                    </div>
                    <div class="form-group">
                        <label for="firstName"><%= __('firstName') %></label>
                        <input type="text"
                               class="form-control"
                               name="firstName"
                               id="firstName"
                               placeholder="Тарас">
                    </div>
                    <div class="form-group">
                        <label for="middleName"><%= __('middleName') %></label>
                        <input type="text"
                               class="form-control"
                               name="middleName"
                               id="middleName"
                               placeholder="Григорович">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit"
                            class="btn btn-primary btn-inflection-form"><%= __('inflect') %></button>
                    <button class="btn btn-link pull-right btn-inflection-form"
                            type="button"
                            data-toggle="modal"
                            data-target="#contactMe"><%= __('foundBug') %></button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-7">
        <div class="card">
            <table class="table table-striped table-responsive-md m-0">
                <tr>
                    <th class="border-top-0"><%= __('grammaticalCase') %></th>
                    <th class="border-top-0"><%= __('lastName') %></th>
                    <th class="border-top-0"><%= __('firstName') %></th>
                    <th class="border-top-0"><%= __('middleName') %></th>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseNominative') %></th>
                    <td id="nominativeLastName">Шевченко</td>
                    <td id="nominativeFirstName">Тарас</td>
                    <td id="nominativeMiddleName">Григорович</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseGenitive') %></th>
                    <td id="genitiveLastName">Шевченка</td>
                    <td id="genitiveFirstName">Тараса</td>
                    <td id="genitiveMiddleName">Григоровича</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseDative') %></th>
                    <td id="dativeLastName">Шевченку</td>
                    <td id="dativeFirstName">Тарасу</td>
                    <td id="dativeMiddleName">Григоровичу</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseAccusative') %></th>
                    <td id="accusativeLastName">Шевченка</td>
                    <td id="accusativeFirstName">Тараса</td>
                    <td id="accusativeMiddleName">Григоровича</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseAblative') %></th>
                    <td id="ablativeLastName">Шевченком</td>
                    <td id="ablativeFirstName">Тарасом</td>
                    <td id="ablativeMiddleName">Григоровичем</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseLocative') %></th>
                    <td id="locativeLastName">Шевченкові</td>
                    <td id="locativeFirstName">Тарасові</td>
                    <td id="locativeMiddleName">Григоровичу</td>
                </tr>
                <tr>
                    <th><%= __('grammaticalCaseVocative') %></th>
                    <td id="vocativeLastName">Шевченку</td>
                    <td id="vocativeFirstName">Тарасе</td>
                    <td id="vocativeMiddleName">Григоровичу</td>
                </tr>
            </table>
        </div>
    </div>
</div>
